<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>Library</display-name>

    <welcome-file-list>
        <welcome-file>/WEB-INF/jsp/home.jsp</welcome-file>
    </welcome-file-list>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>resources</param-value>
	</context-param>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
		<param-value>ru</param-value>
	</context-param>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.fallbackLocale</param-name>
		<param-value>en</param-value>
	</context-param>

	<context-param>
		<param-name>locales</param-name>
		<param-value>ru en</param-value>
	</context-param>

	<servlet>
		<servlet-name>FrontServlet</servlet-name>
		<servlet-class>edu.demian.controller.FrontServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FrontServlet</servlet-name>
		<url-pattern>/jsp/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>SessionLocaleFilter</filter-name>
		<filter-class>edu.demian.filter.SessionLocaleFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SessionLocaleFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>